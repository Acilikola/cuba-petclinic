<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<views xmlns="http://schemas.haulmont.com/cuba/view.xsd">
    <view class="com.haulmont.petclinic.entity.Vet"
          extends="_minimal"
          name="vet-specialities-view">
        <property name="specialities"
                  view="_minimal">
        </property>
    </view>
    <view class="com.haulmont.petclinic.entity.Owner"
          extends="_local"
          name="owner-with-pets">
        <property name="pets"
                  view="_local">
            <property name="type"
                      view="_local"/>
            <property name="visits"
                      view="_local"/>
        </property>
    </view>
    <view class="com.haulmont.petclinic.entity.Pet"
          extends="_local"
          name="pet-create">
        <property name="type"
                  view="_minimal">
            <property name="name"/>
        </property>
        <property name="owner"
                  view="_minimal"/>
    </view>
    <view class="com.haulmont.petclinic.entity.Pet"
          extends="_local"
          name="pet-view">
        <property name="type"
                  view="_minimal"/>
    </view>
    <view class="com.haulmont.petclinic.entity.Visit"
          extends="_local"
          name="visit-edit">
        <property name="pet"
                  view="_minimal">
            <property name="type"
                      view="_minimal"/>
            <property name="name"/>
        </property>
    </view>
</views>
